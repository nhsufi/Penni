{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "esnext",
    "target": "es6",
    "baseUrl": ".",
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}
