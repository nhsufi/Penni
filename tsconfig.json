{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "config/*",
    "controllers/*",
    "models/*",
    "middlewares.ts",
    "server.ts"
  ],
  "exclude": ["**/*.test.ts", "client"]
}
